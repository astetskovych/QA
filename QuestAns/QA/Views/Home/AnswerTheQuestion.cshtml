
@model QA.Models.QuestionWithAnswer

@{
    ViewBag.Title = "AnswerTheQuestion";
}


@using (Html.BeginForm("SaveAnswer", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            <h4>Дайте відповідь на запитання:</h4>
            <p>@Model.Q.Text</p>
            @Html.HiddenFor(m => (m.Q.Id))
            @Html.TextAreaFor(m => (m.A.Text), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Відправити" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
