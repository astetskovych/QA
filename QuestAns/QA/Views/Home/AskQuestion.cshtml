@model  Common.Models.Question
@{
    ViewBag.Title = "Запитання";
}

@using (Html.BeginForm("SaveQuestion", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <h4>Запитання</h4>
    <hr />
    <div class="form-group">
        <div class="col-md-10">
            <p>Ваше запитання:</p>
            @Html.TextAreaFor(m => m.Text, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Відправити" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


